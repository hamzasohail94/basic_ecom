<%= render 'layouts/navbar' %>
<div class="container">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">

      <div class="modal-body">
        <div class="form-title text-center">
          <%= image_tag(url_for(@product.image), class: 'show-img') if @product.image.attached? %>
        </div>
        <div class="d-flex flex-column text-center">
          <p>
            <strong>Name:</strong>
            <%= @product.name %>
          </p>

          <p>
            <strong>Price:</strong>
            <%= @product.price %>
          </p>

          <p>
            <strong>Quantity:</strong>
            <%= @product.quantity %>
          </p>
        </div>
      </div>
      <div class="modal-footer d-flex justify-content-center">
        <% if current_user&.role == 'Buyer' || !current_user.present? %>
          <%= link_to 'Add to cart', add_to_cart_product_path(@product.id), method: :post, class: 'text-info' %>
        <% else %>
          <%= link_to 'Edit', edit_product_path(@product) %> |
        <% end %>
        <%= link_to 'Back', products_path %>
      </div>
    </div>
  </div>
</div>
